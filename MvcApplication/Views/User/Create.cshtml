@model MvcApplication.Models.CreateUserModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Sign up</title>


    <link rel="stylesheet" media="all" href="~/Css/abbc.css" />
    <link rel="stylesheet" media="screen" href="~/Css/font-awesome.min.css" />

</head>

<body id="sessions_controller" class="new_action">
    <div class="wrapper">
        <nav class="navbar navbar-toggleable-sm navbar-static-top">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                &#9776;
            </button>

            <a class="navbar-brand" href="/">Mailblast</a>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a class="nav-link" href="#">Pricing</a></li>
                    <li class="nav-item active"><a class="nav-link" href="#">Docs</a></li>
                    <li class="nav-item active"><a class="nav-link" href="#">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Signup</a></li>
                </ul>
            </div>
        </nav>

        @Html.Raw(ViewBag.js)
         @Html.Raw(ViewBag.GotoLogin)
        @using (Html.BeginForm())
        { 
            <div class="dialog">
                <div class="card">
                    <div class="card-header">
                        <h4>Sign up</h4>
                    </div>

                    <div style="margin: 0 -15px;">
                    </div>

                    <div class="card-block">
                        <form role="form" class="new_user" id="new_user" action="/users" accept-charset="UTF-8" method="post">
                            <input name="utf8" type="hidden" value="&#x2713;" /><input type="hidden" name="authenticity_token" value="E06sdJI9GXVI12DMj+zgyvQwL4CPRaqTvjSiSpCk/u842DjA+U09LPSufieOYMgQ08J5usD0eVvfOENg4BDDJQ==" />
                            <div class="form-group">
                                <label class="form-control-label required" for="user_name">Name</label>
                                @*<input autofocus="autofocus" class="form-control" type="text" name="user[name]" id="user_name" />*@
                                @Html.TextBoxFor(m => m.Name,  new { @class="form-control",type="text", name="user[name]", id="user_name"  })
                                 </div>
                            <div class="form-group">
                                <label class="form-control-label required" for="user_email">Email</label>
                                 @Html.TextBoxFor(m => m.Email,  new { @class="form-control",type="email", name="user[password]", id="user_password"  })
                                @*<input class="form-control" type="email" value="" name="user[email]" id="user_email" />*@
                            </div>
                            <div class="form-group">
                                <label class="form-control-label required" for="user_password">Password</label>
                                @Html.TextBoxFor(m => m.Password,  new { @class="form-control",type="password", name="user[password]", id="user_password"  })
                                @*<input class="form-control" type="password" name="user[password]" id="user_password" />*@
                            </div>

                            <input type="submit" name="commit" value="Sign up" class="btn btn-primary" data-disable-with="Sign up" onclick="Create()" />
                            <a class="btn btn-link text-warning float-right" href="~/User/Login">Already a Member?</a>
                        </form>
                    </div>
                </div>
                @*<input type="button" name="commit" value="Sign up" class="btn btn-primary" data-disable-with="Sign" onclick="GotoLogin()" />*@
                <p class="text-center">By Clicking "Sign up", you agree to our <a href="#" onclick="GotoLogin()">Terms of Service</a></p>
            </div>
    }



        <div class="footer">
            <footer class="footer-area">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-3">
                            <h5 style="color: #fff">Quick Links</h5>
                            <p><a href="#">Api Docs</a></p>
                            <p><a href="#">Pricing</a></p>
                        </div>

                        <div class="col-sm-3">
                            <h5 style="color: #fff">Help</h5>
                            <p><a href="#">contact@mailblast.io</a></p>
                            <p><a href="#">Documentation</a></p>
                        </div>

                        <div class="col-sm-3">
                            <h5 style="color: #fff">Legal</h5>
                            <p><a href="#">Terms of Service</a></p>
                            <p><a href="#">Privacy Policy</a></p>
                        </div>

                        <div class="col-sm-3">
                            <h5 style="color: #fff">Social</h5>
                            <a class="btn btn-social-icon btn-facebook btn-lg" href="#"><i class="fa fa-facebook"></i></a>
                            <a class="btn btn-social-icon btn-twitter btn-lg" href="#"><i class="fa fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            </footer>

        </div>
    </div>
</body>
    <script src="~/lib/bootstrap/js/jquery.min.js"></script>
    <script>
        function Create()
        {
            $("form").submit();
        }
        function GotoLogin()
        {
            alert('注册成功，请登录')
            window.location.href="Login"
        }
    </script>
</html>
